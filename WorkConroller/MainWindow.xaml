<Window 
        x:Name="mainWindow"
        x:Class="WorkConroller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WorkConroller"
        mc:Ignorable="d"
      
        Title="MainWindow" Height="140" Width="400">
    <Grid>
        <TextBox x:Name="periodTextBox" IsEnabled="True" Margin="120,0,0,0" Height="30" Width="200"/>
        <TextBlock Text="Enter period: " FontSize="18" VerticalAlignment="Center" Margin="22,0,240,0" Height="30" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock x:Name="currentPeriodTextBox"  Text="Current period (seconds): " FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Center"  Margin="0,5,0,0" Height="30" Width="260"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Save" Height="30" Width="120"/>
        <Button x:Name="closeToTrayButton" Content="X" FontStyle="Normal"  HorizontalAlignment="Right" Click="CloseToTray"  VerticalAlignment="Top"  Height="25" Width="25"/>
    </Grid>
</Window>
